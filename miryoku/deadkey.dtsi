#define UNDEAD_KEY(NAME, KEY, LABEL) \
    / { \
        macros { \
            name: name { \
                compatible = "zmk,behavior-macro"; \
                label = LABEL; \
                wait-ms = <0>; \
                tap-ms = <0>; \
                #binding-cells = <0>; \
                bindings \
                  = <&macro_tap &kp KEY> \
                  , <&kp SPACE> \
                  ; \
            }; \
        }; 

        dead_key{
          UNDEAD_KEY(TILDE, BR_TILDE, ~)
          UNDEAD_KEY(CARET, BR_CIRC,  ^)
          UNDEAD_KEY(GRAVE, BR_GRAVE, `)
          UNDEAD_KEY(APOS,  BR_APOS,  ')
          UNDEAD_KEY(DQT,   BR_DQT,   ")
        };
};
